<!-- app/views/tasks/show.html.erb -->
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<%= link_to 'Delete', destroy_task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>

<% if @task.completed %>
  <i class="fas fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %>
