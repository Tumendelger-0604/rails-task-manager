<h2>New Task</h2>
<%= form_with(model: @task, url: tasks_path) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :details %>
  <%= form.text_area :details %>

  <%= form.submit %>
<% end %>


<h2>New Task</h2>
<%= render 'form' %>
